<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Emp">
	
	<!-- mybatis에서 join 을 수행하려면, resultType에 오직 하나의 자료형밖에는
	올수가 없기 때문에 Emp, Dept 를 동시에 넣어주는 매핑은 없다...
	해결책) 자동으로 해결이 않되기 때문에 개발자가 직접 명시하는 방법  -->
	<resultMap type="Emp" id="empMap">
		<id column="empno" 			property="empno"/>	
		<result column="ename" 	property="ename"/>	
		<result column="job" 			property="job"/>	
		<result column="mgr" 		property="mgr"/>	
		<result column="hiredate" 	property="hiredate"/>	
		<result column="sal" 			property="sal"/>	
		<result column="comm" 		property="comm"/>	
		<association column="deptno" property="dept" javaType="Dept" 
			select="Dept.select"/>	
							
	</resultMap>
	
	<select id="selectAll" resultMap="empMap" >
		select * from emp
	</select>

	
	<!-- 해당 부서에 소속된 모든 사원 가져오기  -->
	<select id="selectByDetpno" resultType="Emp" parameterType="int">
		select * from emp 
		where deptno=#{deptno}
	</select>	
	

</mapper>






